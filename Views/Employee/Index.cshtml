@model IEnumerable<Krupali_CRUD_Assignment.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Employee List</h2>
<h4>@TempData["Message"]</h4>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <input class="btnAdd" type="button" value="Add Employee" id="btnAdd" onclick="AddEmp();" />

</p>
@*<h3>@ViewBag.AlertMsg</h3>
<h3>@ViewBag.Message</h3>*@

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.EmpId)
                    </td>*@
                @Html.HiddenFor(modelItem => item.EmpId)
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.EmpId })*@
                    <input class="btnEdit" type="button" value="Edit" id="btnEdit" onclick="EditEmp(@item.EmpId)" />

                    @*@Html.ActionLink("Delete", "Delete", new { id = item.EmpId })*@
                    <input class="btnDelete" type="button" value="Delete" id="btnDeleteDoc" onclick="DeleteEmp(@item.EmpId)" />

                </td>
            </tr>
        }
    }


</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script type="text/javascript">
    function DeleteEmp(id) {
        if (confirm("Do you really want to delete an Employee?"))
            window.location.href = "/Employee/Delete?id=" + id;
        else
            return false;

        //alert(id);
    }
    function EditEmp(id) {
        window.location.href = "/Employee/Edit?id=" + id;

        //alert(id);
    }
    function AddEmp() {
        window.location.href = "/Employee/Create";

        //alert(id);
    }
</script>
<style>
    .btnDelete {
        background-color: #f44336;
    }
    /* Green */
    .btnEdit {
        background-color: #4CAF50;
    }
    /* Blue */
    .btnAdd {
        background-color: #008CBA;
    }
</style>